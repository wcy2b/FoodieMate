<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wheel_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/fm_primary"
        android:layout_marginBottom="24dp"/>

    <com.example.foodiemate.ui.widget.FoodWheelView
        android:id="@+id/foodWheelView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvWheelResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spin_result"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSpin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/spin_start"
        android:padding="12dp"
        app:cornerRadius="24dp"/>

    <!-- Smart Recommendation Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/fm_secondary"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_home_24"
                android:layout_marginEnd="16dp"
                app:tint="@color/fm_secondary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不知道吃什么？"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击尝试智能推荐 (AI)"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="试试"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/fm_secondary"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

